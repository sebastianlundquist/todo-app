<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TestApp.Views.ItemDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            AutomationId="editButton"
            Command="{Binding EditItemCommand}"
            Text="Edit" />
        <ToolbarItem
            AutomationId="deleteButton"
            Command="{Binding DeleteItemCommand}"
            Text="Delete" />
    </ContentPage.ToolbarItems>

    <StackLayout
        Padding="15"
        AutomationId="detailsContainer"
        Spacing="20">
        <Label FontSize="Medium" Text="Title:" />
        <Label FontSize="Small" Text="{Binding Item.Title}" />
        <Label FontSize="Medium" Text="Description:" />
        <Label FontSize="Small" Text="{Binding Item.Description}" />
        <StackLayout
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding ShowReminder}"
            Orientation="Horizontal">
            <Label Text="Reminder:" />
            <Label Text="{Binding Item.ReminderTime, StringFormat='{0:MMMM dd yyyy HH:mm}'}" />
        </StackLayout>
    </StackLayout>

</ContentPage>